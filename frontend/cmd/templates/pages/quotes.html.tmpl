{{ define "page" }}
{{ template "page-title" "Quotes" }}

<div class="py-4 flex flex-col gap-4">
  {{ range $quote := .Quotes }}
  <div class="shadow-md border p-4 text-center rounded-xl">
    <div class="italic text-lg font-semibold">
      <span class="text-2xl text-gray-500">&ldquo;</span><!--
      --><span class="text-xl">{{- $quote.title -}}</span><!--
      --><span class="text-2xl text-gray-500">&rdquo;</span>
    </div>
    <span class="text-gray-700">- {{ $quote.person }}</span>
  </div>

  {{ end }}
</div>

{{ end }}
